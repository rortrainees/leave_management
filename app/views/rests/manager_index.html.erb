<table>
            <tr>
              <th> ID</th>
              <th> Name</th>
              <th> Profile</th>
              <th> Designation</th>
             
            </tr>
              <% @employes.each do |employe| %>
             
            <tr>
              <td> <%=employe.id%></td>
              <td> <%=employe.name%></td>
              <td> <%=employe.profile%></td>
              <td> <%=employe.designation%></td>
            </tr>
        <%end%>
        </table>


