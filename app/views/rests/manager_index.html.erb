  <thead>
    <tr>
      <th>Employe</th>
      <th>Resone</th>
      <th>Start date</th>
      <th>End date</th>
      <th> Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rests.each do |rest| %>
      <tr>
