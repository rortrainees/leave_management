<h1> Welcome </h1>

<table>
            <tr>
              <th> ID</th>
              <th> Name</th>
              
             
            </tr>
              <% @employes.each do |employe| %>
             
            <tr>
              <td> <%=employe.e_id%></td>
              <td> <%=employe.name%></td>
             
            </tr>
        <%end%>
        </table>


<h1> Leave Applications</h1>

<%#= render :partial => 'leave_applications' %>

<table>
  <thead>
    <tr>
      <th>Employe Id</th>
      <th>Resone</th>
      <th>Place</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Join Date</th>
      <th>Department</th>
      <th>Contact</th>
      <th> Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rests.each do |rest| %>
      <tr>
        <td><%= rest.employe.e_id %></td>
        <td><%= rest.resone %></td>
        <td><%= rest.place %></td>
        <td><%= rest.start_date %></td>
        <td><%= rest.end_date %></td><br>
        <td><%= rest.join_date %></td><br>
        <td><%= rest.department %></td><br>
        <td><%= rest.contact %></td><br>

       <td style="width:100px;color:red"> <%= rest.status %></td><br>
       <td><%= link_to 'Approve' , approve_path(rest),:class=>'btn btn-success' %>
      <%= link_to 'DisApprove' , disapprove_path(rest),:class=>'btn btn-danger' %>
      </td>

      </tr>
    <% end %>
  </tbody>
</table>